[user]
	email = wouter.vanscharen@intracto.com
	name = Wouter Van Scharen
[core]
	editor = vim
        whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
	excludesfile = ~/.gitignore
	autocrlf = input
[push]
	default = simple
[pull]
	rebase = true
[alias]
    	# Shortening aliases
    	co = checkout
   	cob = checkout -b
	f = fetch -p
    	c = commit
    	p = push
    	ba = branch -a
    	bd = branch -d
    	bD = branch -D
    	dc = diff --cached

    	# Feature improving aliases
    	st = status -sb
    	a = add -A

    	# Complex aliases
    	plog = log --graph --pretty='format:%C(red)%d%C(reset) %C(yellow)%h%C(reset) %ar %C(green)%aN%C(reset) %s'
    	tlog = log --stat --since='1 Day Ago' --graph --pretty=oneline --abbrev-commit --date=relative
    	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit

	#Git flow
	publish = flow publish
    finish = flow finish -Fp
    hotfix = flow hotfix
    feature = flow feature
    release = flow release
[color]
	ui = auto
[color "branch"]
	current = yellow bold
	local = green bold
	remote = cyan bold
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
	whitespace = red reverse
[color "status"]
	added = green bold
	changed = yellow bold
	untracked = red bold
[diff]
	tool = vimdiff
[difftool]
	prompt = false
[tag]
	sort = version:refname
